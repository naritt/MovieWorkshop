@model IEnumerable<Movie>

@{
    ViewData["Title"] = "Movie Management";
}

<h5>Movie Management</h5>
<hr />
<a class="btn btn-success" style="margin-bottom: 10px;" asp-controller="Admin" asp-action="Create">Create</a>
<div class="table-responsive">
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Type</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Type.Name
                    </td>
                    <td>
                        <a class="btn btn-info" asp-controller="Admin" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-primary" asp-controller="Admin" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                        <a class="btn btn-danger" asp-controller="Admin" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
