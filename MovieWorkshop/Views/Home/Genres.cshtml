@model IEnumerable<Movie>

@{
    string Genre = Model.First().Type.Name;
    ViewData["Title"] = $"Movie {Genre}";
}

<div class="row">
    <div class="col-md-12">
        <h5>@Genre</h5>
    </div>
</div>
<hr />

<div class="row">
    @foreach(var item in Model)
        {
            <div class="col-md-3 d-flex align-items-stretch" style="margin-bottom: 5px;">
                <div class="card">
                    <img src="@item.ImageUrl" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <a asp-controller="Home" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-primary">View details</a>
                    </div>
                </div>
            </div>
        }
</div>